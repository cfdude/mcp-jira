{
  "name": "jira-server",
  "version": "1.1.1",
  "description": "Enterprise-grade Model Context Protocol server for comprehensive Jira integration with automated field detection, multi-instance support, and cross-server capabilities",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "jira",
    "atlassian",
    "project-management",
    "ai-assistant",
    "claude",
    "integration",
    "enterprise",
    "multi-instance",
    "typescript"
  ],
  "author": "Rob Sherman",
  "license": "MIT",
  "homepage": "https://github.com/cfdude/mcp-jira#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfdude/mcp-jira.git"
  },
  "bugs": {
    "url": "https://github.com/cfdude/mcp-jira/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "bin": {
    "jira-server": "build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "ci": "npm run lint:ci && npm run format:check && npm run build",
    "lint:ci": "eslint 'src/**/*.ts' 'tests/**/*.ts' --max-warnings 500 --rule '@typescript-eslint/no-unused-vars: warn'",
    "shutdown": "pkill -f 'node.*jira.*build/index.js' || echo 'No jira server processes found'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.4",
    "adf-to-md": "^1.2.1",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "audit-ci": "^7.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
